public class Add_Two_Numbers {

    
     public Add_Two_Numbers() {
    }

     public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
        if( l1.val == 0 || l1 == null){return l2;}
        if( l2.val == 0 || l2 == null){return l1;}

        int carry = 0; // carry number 
        int val = 0;
        int actual_result_node = 0;
        ListNode current_val_node_1 =  l1;
        ListNode current_val_node_2 =  l2;
        ListNode result = new ListNode(); 
        int val_node_1 = 0;
        int val_node_2 = 0;    
        while(   l1.next != null || l2.next != null){
            val_node_1 = current_val_node_1 == null ? 0 : current_val_node_1.val;
            val_node_2 = current_val_node_2 == null ? 0 : current_val_node_2.val;
            val = (val_node_1 + val_node_2 + carry ) ;
            actual_result_node = val % 10 ;
            System.out.println(actual_result_node + "=");
            carry = val >= 10 ? 1 : 0;
            result = new ListNode(actual_result_node,result);
            l1 = l1.next;
            l2 = l2.next; // >> l1  null can not assign value 
            current_val_node_1 = l1.next != null ?  l1.next : new ListNode() ;
            current_val_node_2 = l2.next != null ?  l2.next : new ListNode() ;
        } 
        return result;
    }

    // recursive function to add node 


    public String prettyNodePrint(ListNode node , String result ){
        if(node == null) return result;
        result += node.val  ;
        return  prettyNodePrint(node.next, result + " -> ") ;
    }
    public static void main(String[] args) {
// First number: 12345
        ListNode l1 = new ListNode(1,
                        new ListNode(2,
                        new ListNode(3,new ListNode(4,new ListNode(5)))));

        // Second number: 67890
        ListNode l2 = new ListNode(6,new ListNode(7,new ListNode(8)));

Add_Two_Numbers add_Two_Numbers = new Add_Two_Numbers();
ListNode node = add_Two_Numbers.addTwoNumbers(l1, l2);
System.out.println(add_Two_Numbers.prettyNodePrint(node,""));
System.out.println("asdasd");
    }
    public static class ListNode {
        int val;
     ListNode next;
     ListNode() {}
     ListNode(int val) { this.val = val; }
     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
        
    }
}


